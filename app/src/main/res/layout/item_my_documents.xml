<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dimen_8"
    android:layout_height="@dimen/dimen_100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivDoc"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80" />

        <TextView
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@+id/ivDoc"
            style="@style/TextViewStyle"
            android:id="@+id/tvDocumentsName"
            android:textSize="@dimen/text_size_16"
            android:text="Document Name"
            android:layout_toLeftOf="@+id/tvDocumentsNumber"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_alignParentRight="true"
            style="@style/TextViewStyle"
            android:layout_marginRight="@dimen/dimen_10"
            android:id="@+id/tvDocumentsNumber"
            android:textSize="@dimen/text_size_16"
            android:text="#432"
            android:textColor="@color/warm_gray"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@+id/ivDoc"
            android:layout_below="@+id/tvDocumentsName"
            style="@style/TextViewStyle"
            android:layout_marginTop="@dimen/dimen_10"
            android:textColor="@color/warm_gray"
            android:text="Expired On:12 Jan 2022;Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_below="@+id/tvDocumentsName"
            android:layout_alignParentRight="true"
            android:rotation="90"
            app:srcCompat="@drawable/ic_three_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>