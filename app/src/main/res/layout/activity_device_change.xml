<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_15"
        tools:context=".ui.deviceChange.DeviceChangeActivity"
        android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    tools:text="Device Change"
                    android:textColor="@color/black"
                    style="@style/TextViewStyleBold"
                    android:textSize="@dimen/text_size_20" />

                <ImageView
                    android:layout_marginTop="@dimen/dimen_70"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_android_phone"
                    android:scaleType="fitCenter"
                    android:layout_width="@dimen/dimen_150"
                    android:layout_height="@dimen/dimen_150"/>

                <TextView
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:id="@+id/tv_change_message"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/dimen_15"
                    android:textAlignment="center"
                    android:layout_marginVertical="@dimen/dimen_20"
                    android:padding="@dimen/dimen_5"/>


                <Button
                    android:visibility="visible"
                    android:id="@+id/btn_proceed_change"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dimen_20"
                    android:text="@string/proceed"
                    />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</layout>