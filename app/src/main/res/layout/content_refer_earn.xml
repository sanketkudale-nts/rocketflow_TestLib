<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.referearn.ReferAndEarnActivity"
    tools:showIn="@layout/activity_refer_earn">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dimen_50"
                android:layout_marginEnd="@dimen/dimen_50"
                android:background="@drawable/bg_dashboard">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/campton_semi_bold"
                    android:text="@string/your_referal_code"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="#80bcbcbc"
                android:outlineSpotShadowColor="#80bcbcbc"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen_5"
                app:cardElevation="@dimen/dimen_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_20">

                    <TextView
                        android:id="@+id/tvReferCode"
                        style="@style/TextViewStyle"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_refer_earn"
                        android:fontFamily="@font/campton_semi_bold"
                        android:paddingStart="@dimen/dimen_40"
                        android:paddingTop="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_40"
                        android:paddingBottom="@dimen/dimen_12"
                        android:textSize="@dimen/text_size_18"
                        tools:text="@string/app_name" />

                    <TextView
                        android:id="@+id/tcTapToCopy"
                        style="@style/TextViewStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:text="@string/tap_to_copy"
                        android:textAllCaps="true"
                        android:textColor="@color/light_blue_2"
                        android:textSize="@dimen/text_size_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/dimen_20"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_30"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/ic_whatsapp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_30"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/ic_instagram" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_30"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/ic_messenger" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            app:srcCompat="@drawable/ic_others" />
                    </LinearLayout>

                    <TextView
                        style="@style/TextViewStyle"
                        android:layout_gravity="center"
                        android:fontFamily="@font/campton_book"
                        android:lineSpacingExtra="7sp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_10"
                        tools:text="Share your referal code with your friends via sms/Email/
                    Whatsapp and earn up to 500 credits." />

                    <TextView
                        style="@style/TextViewStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:background="@drawable/bg_invite_contacts"
                        android:fontFamily="@font/campton_book"
                        android:paddingStart="@dimen/dimen_30"
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_30"
                        android:paddingBottom="@dimen/dimen_10"
                        android:text="@string/invite_your_contacts"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>