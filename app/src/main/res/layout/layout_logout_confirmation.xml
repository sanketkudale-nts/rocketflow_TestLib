<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_15"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_8"
    android:clipChildren="false"
    android:elevation="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_40"
            android:text="@string/logout_text"
            android:fontFamily="@font/campton_semi_bold"
            android:textColor="@color/red_dark6"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_40"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="@font/campton_book"
            android:text="@string/by_doing_this_following_action_will_be_perform_by_them_system"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            android:gravity="center_vertical">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="\u2022"
                android:gravity="center_vertical"
                style="@style/TextViewStyle"
                android:fontFamily="@font/campton_book"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_14"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:fontFamily="@font/campton_book"
                android:text="You will be marked Punch Out"
                style="@style/TextViewStyle"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_14"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            android:gravity="center_vertical">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="\u2022"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                style="@style/TextViewStyle"
                android:fontFamily="@font/campton_book"
                android:textSize="@dimen/text_size_14"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:text="Your running tasks will be ended"
                style="@style/TextViewStyle"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_14"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:paddingLeft="@dimen/dimen_40"
            android:paddingRight="@dimen/dimen_40"
            android:id="@+id/btnCancel"
            style="@style/ButtonStyle"
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_gravity="center_horizontal"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_18" />
        <Button
            android:layout_marginBottom="@dimen/dimen_50"
            android:id="@+id/btnLogout"
            style="@style/ButtonStyle"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/semi_gray"
            android:text="@string/logout_now"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_18" />




    </LinearLayout>


</androidx.cardview.widget.CardView>